{
  "name": "browser-game-loader",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/katai5plate/browser-game-loader",
  "author": "katai5plate <katai5plate.sub@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "nw\\nw.exe",
    "setup": "npm run setupNW && npm run setupLibs",
    "setupNW": "run-s setupNW:*",
    "setupNW:clean-nw": "node scripts/cleanNwDir",
    "setupNW:delete-sdk": "rimraf \"./download/nw-sdk.zip\" \"./download/nw-sdk/*\"",
    "setupNW:download-sdk": "node scripts/dl \"https://dl.nwjs.io/v0.51.2/nwjs-sdk-v0.51.2-win-x64.zip\" \"nw-sdk.zip\"",
    "setupNW:unzip-sdk": "rimraf \"./download/nw-sdk/\" && node scripts/unzip \"nw-sdk.zip\"",
    "setupNW:optimize-sdk": "rimraf \"./download/nw-sdk/{index.html,package.json}\"",
    "setupNW:move-sdk": "cpx \"./download/nw-sdk/**/*\" \"./nw/\"",
    "setupLibs": "run-s setupLibs:*",
    "setupLibs:bulma": "cpx -u \"./node_modules/bulma/{LICENSE,css/bulma.min.css}\" \"./nw/_app/libs/bulma/\"",
    "setupLibs:adm-zip": "cpx -u \"./node_modules/adm-zip/{LICENSE,adm-zip.js}\" \"./nw/_app/libs/adm-zip/\"",
    "setupLibs:preact": "cpx -u \"./node_modules/preact/{LICENSE,dist/preact.module.js}\" \"./nw/_app/libs/preact/\"",
    "setupLibs:htm": "cpx -u \"./node_modules/htm/{LICENSE,dist/htm.module.js}\" \"./nw/_app/libs/htm/\"",
    "setupLibs:fetch-polyfill": "cpx -u \"./node_modules/fetch-polyfill/{LICENSE,fetch.js}\" \"./nw/_app/libs/fetch-polyfill/\"",
    "setupLibs:license__nwjs": "node scripts/dl \"https://raw.githubusercontent.com/nwjs/nw.js/nw51/LICENSE\" \"LICENSE_nwjs\" && cpx -u \"./download/LICENSE_nwjs\" \"./nw/\""
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "axios": "^0.21.1",
    "cpx": "^1.5.0",
    "fs-extra": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "progress": "^2.0.3",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.3",
    "bulma": "^0.9.2",
    "fetch-polyfill": "^0.8.2",
    "htm": "^3.0.4",
    "preact": "^10.5.12"
  }
}
